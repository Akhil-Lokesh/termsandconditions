# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_PRIMARY=gpt-4
OPENAI_MODEL_SECONDARY=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_USER=tc-analysis-user
PINECONE_INDEX_BASELINE=tc-analysis-baseline
PINECONE_NAMESPACE_USER=user_tcs
PINECONE_NAMESPACE_BASELINE=baseline

# Database Configuration
DATABASE_URL=postgresql://tcuser:tcpassword@localhost:5432/tcanalysis
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=10

# JWT Authentication
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32-to-generate
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=TC Analysis System
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000"]

# Environment
ENVIRONMENT=development
DEBUG=True

# Document Processing
MAX_FILE_SIZE_MB=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Anomaly Detection
PREVALENCE_THRESHOLD=0.30
BASELINE_SAMPLE_SIZE=50
SIMILARITY_THRESHOLD=0.85

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
